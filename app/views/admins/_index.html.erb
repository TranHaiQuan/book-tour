<% @users.each do |user| %>
  <tr>
    <td><%= user.id %></td>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= user.phone %></td>
    <td><%= user.address %></td>
    <td><%= user.sex %></td>
    <td>
      <%= link_to edit_admin_path(user), class: "btn btn-success", data: {toggle: "tooltip"}, title: "Edit",
        remote: true do %>
        <span class="glyphicon glyphicon-pencil"></span>
      <% end %>
      <% unless user.admin? %>
        <%= link_to admin_booking_path(user), class: "btn btn-warning", data: {toggle: "tooltip"}, title: "Total tour of user booked",
          remote: true do %>
          <span class="glyphicon glyphicon-shopping-cart"></span>
          <span class="badge">
            <%= Booking.list_booking(user.id).size %></span>
        <% end %>
      <% end %>
      <% unless current_user.id == user.id %>
        <%= link_to admin_delete_path(user), class: "btn btn-danger", data: {toggle: "tooltip"}, title: "Delete",
          remote: true do %>
          <span class="glyphicon glyphicon-trash"></span>
        <% end %>
      <% end %>
    </td>
  </tr>
<% end %>
